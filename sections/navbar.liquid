    <header class="py-0 mb-0 border-bottom ws-nav-background">
    <div class="container d-flex flex-wrap justify-content-center">
      <a href="{{ routes.root_url }}" class="d-flex align-items-center mb-3 mb-lg-0 me-lg-auto link-body-emphasis text-decoration-none">
				<img
				class="img-fluid navbar-logo-default"
				src="{{ settings.logo | image_url: height: 160 }}" 
				alt="{{ shop.name }}"
				width="{{ 80 | times: settings.logo.aspect_ratio | round }}" 
				height="80" loading="lazy">
      </a>
    </div>
  </header>
  <nav class="py-0 mb-1 navbar bg-gradient bg-dark text-light">
    <div class="container d-flex flex-wrap">
{% render 'navbar-desktop-menu' %}
      <form class="col-12 col-lg-auto mb-3 mb-lg-0" role="search">
        <input type="search" class="form-control" placeholder="Search..." aria-label="Search">
      </form>
    </div>
  </nav>

{% schema %}
{
  "name": "Navbar",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo"
        },
        {
          "type": "range",
          "id": "logo_height",
          "label": "Logo height",
          "min": 20,
          "max": 100,
          "step": 2,
          "default": 100
        },
        {
          "type": "link_list",
          "id": "main_menu",
          "label": "Main menu",
          "default": "main-menu"
        }
      ],
      "blocks": [
        {
            "type": "megamenu",
            "name": "Mega Menu",
            "settings": [
                {
                    "type": "header",
                    "content": "General"
                },
                {
                    "type": "text",
                    "id": "for_item",
                    "label": "For Item"
                },
                {
                    "type": "range",
                    "id": "grid",
                    "min": 1,
                    "max": 12,
                    "step": 1,
                    "unit": "/12",
                    "label": "Links column size",
                    "default": 2
                },
                {
                    "type": "checkbox",
                    "id": "second_level_column",
                    "label": "Second Level is a Column",
                    "default": false
                },
                {
                    "type": "range",
                    "id": "second_level_column_size",
                    "min": 1,
                    "max": 50,
                    "step": 1,
                    "label": "Column Lines Limit",
                    "default": 20
                },
                {
                    "type": "checkbox",
                    "id": "wrap",
                    "label": "Wrap menu columns to grid",
                    "default": false
                },
                {
                    "type": "range",
                    "id": "wrapper_grid",
                    "min": 1,
                    "max": 12,
                    "step": 1,
                    "unit": "/12",
                    "label": "Wrapper column size",
                    "default": 12
                }
            ]
        }
      ]
}
{% endschema %}