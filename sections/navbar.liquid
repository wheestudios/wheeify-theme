    <header class="py-0 mb-0 border-bottom ws-nav-background">
    <div class="container d-flex flex-wrap justify-content-center">
      <a href="{{ routes.root_url }}" class="d-flex align-items-center mb-3 mb-lg-0 me-lg-auto link-body-emphasis text-decoration-none">
				<img
				class="img-fluid navbar-logo-default"
				src="{{ settings.logo | image_url: height: 160 }}" 
				alt="{{ shop.name }}"
				width="{{ 80 | times: settings.logo.aspect_ratio | round }}" 
				height="80" loading="lazy">
      </a>
    </div>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#wsMainNav" aria-controls="wsMainNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  </header>

  <nav class="py-0 mb-1 navbar navbar-expand-lg bg-gradient bg-dark text-light">
    <div class="container d-flex flex-wrap">
      <div class="collapse navbar-collapse" id="wsMainNav">
{% render 'navbar-desktop-menu' %}
      </div>
    </div>
  </nav>

{% schema %}
{
  "name": "Navbar",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo"
        },
        {
          "type": "range",
          "id": "logo_height",
          "label": "Logo height",
          "min": 20,
          "max": 100,
          "step": 2,
          "default": 100
        },
        {
          "type": "link_list",
          "id": "main_menu",
          "label": "Main menu",
          "default": "main-menu"
        }
      ],
      "blocks": [
        {
            "type": "megamenu",
            "name": "Mega Menu",
            "settings": [
                {
                    "type": "header",
                    "content": "General"
                },       
                {
                    "type": "text",
                    "id": "for_item",
                    "label": "For Item"
                },
                {
                  "type": "range",
                  "id": "num_mega_columns",
                  "label": "Number of Columns",
                  "min": 1,
                  "max": 6,
                  "step": 1,
                  "default": 4
                }
            ]
        }
      ]
}
{% endschema %}